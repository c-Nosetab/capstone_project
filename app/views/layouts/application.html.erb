    </div>

    <div class="modal fade" id="shiftModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h2 class="modal-title" id="myModalLabel">Add Shift</h2>
          </div>
          <div class="modal-body">
            <%= form_tag '/shifts', method: :post do %>
               Date of Shift:
               <br>
               Month:
              <select name="month_start">
                <% (1..12).each do |month| %>
                  <option <%= "selected" if month == Time.now.month %>> <%= month %></option>
                <% end %>
              </select>
              Day:
              <select name="day_start">
                <% (1..31).each do |day| %>
                  <option <%= "selected" if day == Time.now.day %> > <%= day %> </option>
                <% end %>
              </select>
              Year:
              <select name="year_start">
                <% ((Time.now.year)..(Time.now.year + 5)).each do |year| %>
                  <option><%= year %></option>
                <% end %>
              </select>
              <br><br>

              Time:
              <div>
                <select name="hour_start">
                  <%= (0..23).each do |hour| %>
                    <option <%= "selected" if hour == 8 %>><%= hour %></option>
                  <% end %>
                </select>
                :
                <select name="min_start">
                  <%= (00..59).each do |min| %>
                    <option><%= min %></option>
                  <% end %>
                </select>
                  ---
                <select name="hour_end">
                  <%= (0..23).each do |hour| %>
                    <option <%= "selected" if hour == 16 %>><%= hour %></option>
                  <% end %>
                </select>
                :
                <select name="min_end">
                  <%= (00..59).each do |min| %>
                    <option><%= min %></option>
                  <% end %>
                </select>

              </div>
              <div>

              </div>

              <br>
              <div class="col-sm-12">
                <span class="col-sm-offset-9">
                </span>
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <!-- <button type="button" class="btn btn-default">Save changes</button> -->
            <%= submit_tag "Submit" %>
            <% end %>
          </div>
        </div>
