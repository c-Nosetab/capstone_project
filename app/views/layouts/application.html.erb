                <h5>Position:</h5>
              </div>
              <div>
                  <% Position.where(company_id: current_user.company_id).each do |pos| %>
                    <input id="position_id" name="position_id" type="radio" value="<%= pos.id %>" />
                    <label for="position_id"><h6><%= pos.position_name %> </h6></label>
                  <% end %>
              <% end %>
              </div>
              <br>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <input type="submit" value="Add Employee">
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="posModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
